<!-- search form -->
<div class="center">
  <form class="form-inline md-form form-sm mt-0 active-cyan active-cyan2">
    <img src="./images/magnifying_glass.png" id="mag-glass"/>
    <input id="searchbar" class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
    aria-label="Search">
    </input>
  </form>
</div>

<ul>
  {{#each pokemon}}
    <div id="{{formatName this.name}}" class="pokemon">
      <!--<a href='/pokemon/{{this.name}}'>-->
      <a>
        <img src="{{this.image}}"/>
      </a>
      <div class="caption">
        <figcaption>{{formatName this.name}}</figcaption>
      </div>
    </div>
  {{/each}}
</ul>
